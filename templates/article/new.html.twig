{% extends 'base.html.twig' %}

{% block title %}New Article{% endblock %}
    {% include '_navbar.html.twig' %}


{% block body %}
    <h1 class="article-title">Ajouter un article</h1>



    <div class="contact-form">
        {{ form_start(form) }}

        {{ form_row(form.title) }}

        {{ form_row(form.description) }}
        {{ form_row(form.poster) }}
        {{ form_row(form.plateform, {'attr': {'class': 'browser-default'} }) }}
        <input type='submit' value='Add new article'>
        {{ form_end(form) }}
        </div>



    <a class="lien" href="{{ path('article_index') }}">back to list</a>
{% endblock %}


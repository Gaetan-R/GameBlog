{% extends 'base.html.twig' %}

{% block title %}Article #{{ article.id }}{% endblock %}


{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{article.poster}}" alt="{{ article.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ article.title }}</h1>
            <p>{{ article.description }}</p>
            <p>Plateforme : {{ article.plateform.name }}</p>
            <p> Favoris

                <a id="watchlist" class="like" href="{{ path('article_watchlist', {id: article.id})}}">
                    <i class="{{ app.user.isInWatchlist(article) ? 'fas' : 'far' }} fa-heart"></i>
                </a>
            </p>
        </div>
    </div>

<div>
    <a href="{{ path('article_index') }}">back to list</a>

</div>
<div>
    <a href="{{ path('article_edit', {'slug': article.id}) }}">edit</a>

</div>
    {{ include('article/_delete_form.html.twig') }}
{% endblock %}

<form method="post" action="{{ path('plateform_delete', {'id': plateform.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ plateform.id) }}">
    <button class="delete-button waves-effect red accent-4 btn-large">Delete</button>
</form>

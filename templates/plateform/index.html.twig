{% extends 'base.html.twig' %}

{% block title %}Plateform index{% endblock %}

{% block body %}
    <h1>Plateform index</h1>
    <a href="{{ path('plateform_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Year</th>
                <th>Image</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plateform in plateforms %}
            <tr>
                <td>{{ plateform.id }}</td>
                <td>{{ plateform.name }}</td>
                <td>{{ plateform.year }}</td>
                <td>{{ plateform.image }}</td>
                <td>{{ plateform.description }}</td>
                <td>
                    <a href="{{ path('plateform_show', {'id': plateform.id}) }}">show</a>
                    <a href="{{ path('plateform_edit', {'id': plateform.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
